  "bugs": {
    "url": "https://github.com/MitchellPhilmore/codefest/issues"
  },
  "homepage": "https://github.com/MitchellPhilmore/codefest#readme",
  "devDependencies": {
    "concurrently": "^4.1.0",
    "nodemon": "^1.18.7"
  },
  "dependencies": {
    "axios": "^0.18.0",
    "bcrypt": "^3.0.6",
    "dotenv": "^8.0.0",
    "express": "^4.16.4",
    "express-session": "^1.16.1",
    "if-env": "^1.0.4",
    "mongoose": "^5.5.5",
    "passport": "^0.4.0",
    "passport-google-oauth": "^2.0.0",
    "passport-local": "^1.0.0",
    "qrcode": "^1.3.3"
  }
}
